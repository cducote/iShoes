<form action='/shoesies/{{shoesie._id}}/bills?_method=PUT' method='POST'>

<div class="field">
  <p class="control has-icons-left has-icons-right">
    <input class="input" type="text" name="rent" placeholder="Rent">
    <span class="icon is-small is-left">
      <i class="fa fa-home"></i>
    </span>
  </p>
</div>

<div class="field">
  <p class="control has-icons-left">
    <input class="input" type="text" name="carInsurance" placeholder="Car Insurance">
    <span class="icon is-small is-left">
      <i class="fa fa-car"></i>
    </span>
  </p>
</div>

<div class="field">
  <p class="control has-icons-left">
    <input class="input" type="text" name="power" placeholder="Electric">
    <span class="icon is-small is-left">
      <i class="fa fa-bolt"></i>
    </span>
  </p>
</div>

<div class="field">
  <p class="control has-icons-left">
    <input class="input" type="text" name="cc" placeholder="CC Payments">
    <span class="icon is-small is-left">
      <i class="fa fa-credit-card"></i>
    </span>
  </p>
</div>

<div class="field">
  <p class="control has-icons-left">
    <input class="input" type="text" name="other" placeholder="Other">
    <span class="icon is-small is-left">
      <i class="fa fa-mobile"></i>
    </span>
  </p>
</div>

<div class="field is-grouped">
  <div class="control">
    <button class="button is-link">Submit</button>
  </div>

</form> 
