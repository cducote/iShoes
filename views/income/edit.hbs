<div class="tile is-parent is-fullheight">
  <article class="tile is-child notification is-warning">
    <div class="content">

      <h1 id="title">Edit Income</h1>

      <form action='/shoesies/{{shoesie._id}}/income?_method=PUT' method='POST'>

        <div class="field">
          <p class="control has-icons-left">
            <input class="input" type="text" name="primaryIncome" placeholder="Primary Income">
            <span class="icon is-small is-left">
              <i class="fas fa-money-bill-alt"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <p class="control has-icons-left">
            <input class="input" type="text" name="otherIncome" placeholder="Other Income">
            <span class="icon is-small is-left">
              <i class="fas fa-hand-holding-usd"></i>
            </span>
          </p>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>

      </form>
    </div>
  </article>
</div>