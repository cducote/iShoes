<div class="tile is-parent">
  <article class="tile is-child inner">
    <div class="content">

      <h1 id="title">Edit Shoesie</h1>

      <form action='/shoesies/{{shoesie._id}}?_method=PUT' method='POST'>

        <div class="field">
          <p class="control has-icons-left">
            <input class="input" type="text" name="shoesieName" placeholder="{{shoesie.shoesieName}}">
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </p>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>

      </form>

    </div>
  </article>
</div>